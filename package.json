{
  "name": "hathaven",
  "version": "1.0.0",
  "description": "HatHaven - A social platform with AI-powered interactions",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "node ./node_modules/vite/bin/vite.js",
    "dev:client": "node ./node_modules/vite/bin/vite.js --port 3000",
    "dev:server": "node ./node_modules/tsx/dist/cli.js watch server/index.ts",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "tsc && vite build",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --minify",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "mock": "cross-env node server/mock-server/index.js",
    "mock:prism": "cross-env prism mock api/openapi.yaml -p 4002",
    "seed:supabase": "cross-env node server/seed/supabase-seed.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:e2e": "cross-env playwright test",
    "check": "tsc --noEmit",
    "db:push": "cross-env drizzle-kit push:sqlite",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rimraf dist node_modules/.vite"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^0.3.6",
    "@headlessui/react": "^1.7.18",
    "@hookform/resolvers": "^3.3.4",
    "@opentok/client": "^2.26.4",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.18.1",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dayjs": "^1.11.10",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "livekit-client": "^1.15.4",
    "livekit-server-sdk": "^1.2.7",
    "lucide-react": "^0.330.0",
    "multer": "^1.4.5-lts.1",
    "next-auth": "^4.24.5",
    "openai": "^4.28.0",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "react-loading-skeleton": "^3.4.0",
    "react-router-dom": "^6.22.0",
    "recharts": "^3.2.1",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "webpack": "^5.90.2",
    "wouter": "^3.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
